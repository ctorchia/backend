<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="./css/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="./img/favicon.webp">
    <title>Plantilla con EJS</title>
</head>

<body>

    <%- include('../partials/form.ejs') %>

        <% if(productos.length> 0) {%>
            <div class="container border col-6 mt-3 p-3">
                <div class="text-center">
                    <h2>
                        <%= mensaje %>
                    </h2>
                </div>
                <div class="container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-center" scope="col">Titulo:</th>
                                <th class="text-center" scope="col">Precio:</th>
                                <th class="text-center" scope="col">Miniatura:</th>
                            </tr>
                        </thead>
                        <tbody id="listado">
                        </tbody>
                    </table>
                </div>
            </div>
        <%} else { %>
            <h2 class="text-center">No hay Productos</h2>
        <%}%>

    <div class="container">
        <%- include('../partials/chat.ejs') %>
    </div>

    <div class="container col-4">
        <%- include('../partials/footer.ejs', {mensajeFooter:'@ Copyright'}) %>
    </div>

    <!-- JS General -->
    <script src="js/index.js"></script>
    <!-- Manejo de Fechas - date-fns v1.30.1 -->
    <script src="js/date_fns.min.js"></script>

</body>

</html>