<div class="container col-4 align-self-center">
    <h2 class="text-center">Formulario:</h2>
    <form action="/productos" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Nombre:</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Precio:</label>
            <input type="number" class="form-control" id="price" name="price" required>
        </div>
        <div class="mb-3">
            <label for="thumbnail" class="form-label">Miniatura:</label>
            <input type="text" class="form-control" id="thumbnail" name="thumbnail" required>
        </div>
        <input type="submit" value="Aceptar">
    </form>
</div>