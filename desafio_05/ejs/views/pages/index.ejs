<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <% const colorTexto = 'color:blue' %> 
    <h1 style=<%= colorTexto %> >Plantilla con EJS</h1>
    <h2><%= mensaje %></h2>

    <%- include('../partials/form.ejs') %>

    <% if(productos.length> 0) {%>
        <ul>
            <% productos.forEach(prod=> { %>
                <li> Titulo: <%= prod.title%> - Precio: <%= prod.price%> - Link: <%= prod.thumbnail%> </li>
            <% }) %>
        </ul>
        <%} else { %>
            <h2>No hay Productos</h2>
        <%}%>

    <%- include('../partials/footer.ejs', {mensajeFooter:'Soy mensaje para footer'}) %>
</body>

</html>